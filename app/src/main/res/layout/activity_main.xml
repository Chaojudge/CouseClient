<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/timg"
    tools:context="cn.itcast.courseclient.MainActivity">

    <TextView
        android:text="签到应用客户端"
        android:textSize="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:id="@+id/et_buildNum"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginTop="170dp"
        android:background="#3FFFFFFF"
        />
    <TextView
        android:text="号楼"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="173dp"
        android:layout_marginLeft="60dp"
        android:textSize="20dp"
        />
    <EditText
        android:id="@+id/et_floorNum"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginTop="170dp"
        android:background="#3FFFFFFF"
        android:layout_marginLeft="120dp"
        />
    <TextView
        android:text="层"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="173dp"
        android:layout_marginLeft="180dp"
        android:textSize="20dp"
        />
    <EditText
        android:id="@+id/et_classNum"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginTop="170dp"
        android:background="#3FFFFFFF"
        android:layout_marginLeft="220dp"
        />
    <TextView
        android:text="号室"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="173dp"
        android:layout_marginLeft="280dp"
        android:textSize="20dp"
        />
    <TextView
        android:text="服务端IP："
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="220dp"
        android:textSize="20dp"
        />
    <EditText
        android:id="@+id/et_serverIP"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_marginTop="217dp"
        android:background="#3FFFFFFF"
        android:layout_marginLeft="120dp"
        />
    <TextView
        android:text="服务端端口："
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="270dp"
        android:textSize="20dp"
        />
    <EditText
        android:id="@+id/et_serverPORT"
        android:text="8966"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_marginTop="267dp"
        android:background="#3FFFFFFF"
        android:layout_marginLeft="120dp"
        />
    <Button
        android:id="@+id/btn_onnection"
        android:text="连接"
        android:gravity="center_horizontal"
        android:textSize="30dp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginTop="360dp"
        android:background="#3FFFFFFF"
        android:onClick="connectionEvent"
        />
    <Button
        android:id="@+id/btn_cancel"
        android:text="退出"
        android:gravity="center_horizontal"
        android:textSize="30dp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginTop="430dp"
        android:background="#3FFFFFFF"
        android:onClick="cancelEvent"
        />

</RelativeLayout>
